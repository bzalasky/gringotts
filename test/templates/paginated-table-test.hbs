<div class="table-responsive">
  {{> pagination pageInfo}}
  <table class="table table-striped table-hover">
    <thead>
      <tr class="headings">
        {{> sortTableHeader attr='attrA' sortInfo=sortInfo}}
        <th><span>Unsortable Attribute</span></th>
        {{> sortTableHeader attr='attrB' sortInfo=sortInfo}}
      </tr>
    </thead>
    <tbody>
      <tr class="loading"><td colspan="6">Loading...</td></tr>
      <tr class="empty"><td colspan="6">Empty</td></tr>
      <tr class="service-error"><td colspan="6">Error</td></tr>
    </tbody>
  </table>
</div>
